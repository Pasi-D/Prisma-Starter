// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int      @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String   @unique
  profile     Profile?
  posts       Post[]
  nominator   User?    @relation("UserNomination", fields: [nominatedBy], references: [id]) /// Person who nominates you.
  nominatedBy Int? /// Nominated user id
  nomination  User?    @relation("UserNomination") /// Your nomination.
}

model Post {
  id       Int     @id @default(autoincrement())
  title    String
  content  String?
  authorId Int
  author   User?   @relation(fields: [authorId], references: [id])
}

model Profile {
  id       Int    @id @default(autoincrement())
  username String @unique
  userId   Int
  user     User   @relation(fields: [userId], references: [id])
}
