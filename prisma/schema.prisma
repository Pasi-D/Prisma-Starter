// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  profile   Profile?
  posts     Post[]
  managedBy Int?  // Managing User id. Null implies user is above member level.
  manager   User?    @relation("ManageMembers", fields: [managedBy], references: [id])
  members   User[]   @relation("ManageMembers") // Members managed by the User
}

model Post {
  id       Int     @id @default(autoincrement())
  title    String
  content  String?
  authorId Int
  author   User?   @relation(fields: [authorId], references: [id])
}

model Profile {
  id       Int    @id @default(autoincrement())
  username String @unique
  userId   Int
  user     User   @relation(fields: [userId], references: [id])
}
